<main class="index">
    <header class="signin d-flex">
      <div class="container p-4">
        <div class="row">
          <div class="col-md-4 mx-auto">
            <div class="card text-center">
              <div class="card-header">
                <h3>Registrarse</h3>
              </div>
              <img src="/img/logo.png" alt="Logo Mingo" class="card-img-top mx-auto m-2 rounded-circle w-50">
              <div class="card-body">
                <form action="/signup" method="POST">
                  <div class="form-group">
                    <input type="type" name="fullname" placeholder="Full Name" class="form-control" autofocus>
                  </div>
                  <div class="form-group">
                    <input type="text" name="username" placeholder="Username" class="form-control">
                  </div>
                  <div class="form-group">
                    <input type="password" name="password" placeholder="Password" class="form-control">
                  </div>
                  <div class="form-group">
                    <button class="btn btn-success btn-block">
                      ¡Empieza!
                    </button>
                    <br>
                  <h4>¿Ya tienes cuenta?<br>
                    <a href="/signin" class="btn btn-primary m-4">
                    ¡Inicia Sesi&oacute;n!    
                    </a>
                  </h4>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>
</main>